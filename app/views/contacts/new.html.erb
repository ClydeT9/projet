<style>
#connexion {
    display:none;
}
.col-lg-8 {
    margin:auto;
}
.card-footer.text-right {
    border:0px!important;
    background:none;
    padding-top: 0px;
}
.container {
  height: auto !important;
  min-height: 100%;
  min-height: calc(100% - 14em);
}
</style>

<div class="col-lg-8 mt-8">
                <%= form_for @contact,class:"card" do |f| %>
                <div class="card-body">
                  <h2 class="card-title">Contactez-nous</h2>
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="form-label">Nom</label>
                        <%= f.text_field :nom, required: true, class:"form-control", placeholder:"Nom"%>
                      </div>
                    </div>
                    <div class="col-sm-6 col-md-4">
                      <div class="form-group">
                        <label class="form-label">Adresse email</label>
                        <%= f.email_field :email, required: true, class:"form-control",placeholder:"Adresse email" %>
                      </div>
                    </div>
                    <div class="col-sm-6 col-md-4">
                      <div class="form-group">
                        <label class="form-label">Numéro de téléphone</label>
                        <%= f.text_field :telephone, class:"form-control",placeholder:"Numéro de téléphone" %>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group mb-0">
                        <label class="form-label">Message</label>
                        <%= f.text_area :message, as: :text, rows:"5", required: true,class:"form-control",placeholder:"Votre message"  %>
                      </div>
                    </div>
                    <div class="hidden">
                        <%= f.text_field :nickname, hint: 'Leave this field blank!' %>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-right">
                  <%= f.button 'Envoyer', class: "btn btn-secondary btn-lg" %>
                </div>
                <% end %>
 </div>