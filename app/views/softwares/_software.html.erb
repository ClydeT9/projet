<style>
   .like_button {
   display: inline-block;
   float: right;
   }
   #timeline .listing {
   max-height:90px;
   }
   .like_button {
      position:relative;
      bottom: 3.6rem;
      z-index:1;
      margin-right:20px;
   }
   li.listing.clearfix.big {
    margin-bottom: -10px!important;
}

span.cat_info {
    margin: 0px;
    margin-bottom: 4px;
}

.cat_info a {
       font-size: 9px;
}
.job_info {
    margin-top: 4px;
    margin-bottom: 4px;
}
.info.big {
    line-height: 1.25;
    padding-left: 25px;
    display: inline-block;
    position: relative;
    bottom: 5px;
}
.scroll {
  white-space: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: -ms-autohiding-scrollbar; }

.scroll::-webkit-scrollbar {
  display: none; }

.container.example-three {
    max-width: 367px!important;
    float: left;
    padding-left: 0px;
    margin-right: 0px;
} 
nav.vertical-align-middle.scroll {
    white-space: nowrap;
    overflow-x: scroll;
}
#timeline .image_wrapper {
  position:absolute;
}
.info {
    position: relative;
    left: 68px;
}

.image_wrapper {
    max-height: 60px;
    height:60px;
    display: flex;
    align-items: center;
}

@media only screen and (max-width: 500px){ 
    .info.big {
    max-width: 20em;
    margin-top: 20px;
}
#timeline .listing {
    min-height: 9.5em;
}

.main {
    height: auto;
}
}
</style>
<% if software.published? %>

        <li class="listing clearfix big" data-id="<%= software.id %>">
          <div class="image_wrapper">      
            <%= image_tag software.logo %>
          </div>
          <div class="info">
            <span class="job_title"><%= software.title %></span>
            <span class="job_info"><%= software.slogan %></span>
            <div class="container example-three">
            <nav class="vertical-align-middle scroll">
            <span class="cat_info">         
               <% software.categories.each do |category| %>
               <% if category.parent.nil? %>
                     parent
                     <% else %>
                     <%= link_to category.name, category, class:"tag no-click" %>
               <% end %>
               <% end %>
            </span>
            </nav>
            </div>
          </div>
        </li>

<%= link_to software_path(software) do %>
<li class="listing clearfix little" data-id="<%= software.id %>">
   <div class="image_wrapper">
      <%= image_tag software.logo.variant(resize: "120x120") %>
   </div>
   <div class="info big">
      <span class="job_title"><%= software.title %>
      </span>
      <span class="job_info"><%= software.slogan %></span>
            <div class="container example-three">
            <nav class="vertical-align-middle scroll">
            <span class="cat_info">      
         <% software.categories.each do |category| %>
         <% if category.parent.nil? %>
                parent
                <% else %>
                <%= link_to category.name, category, class:"tag no-click" %>
         <% end %>
         <% end %>
      </span> 
      </nav>
      </div>
   </div>
</li>
<% end %>

         <% if user_signed_in? %>
         <div id="like-icon-software-<%= software.id.to_s %>" class="like_button ml-auto no-click">
            <%= render "like_icon", {is_liked: software.is_liked(current_user), software: software} %>
         </div>
         <% else %>
         <a class="like_button no-click" data-toggle="modal" data-target="#logInModal"><span class="btn btn-secondary btn-sm pl-4 pr-4 no-click"><i class="fas fa-caret-up fa-lg no-click" aria-hidden="true"></i></span></a>
         <% end %>

<% end %>
<%# published %>