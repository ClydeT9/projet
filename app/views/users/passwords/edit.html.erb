  <div class="body2a">
                  <div class="card-title">Changement du mot de passe</div>
                 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                 <%= f.hidden_field :reset_password_token %>
                    <div class="form-group">
                    <label class="form-control-placeholder">Nouveau mot de passe</label>
                            <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
                            <% end %>
                            <%= f.password_field :password, autofocus: true, autocomplete: "off",class:"form-control", :required => true %>
                    </div>
                    <div class="form-group">
                    <label class="form-control-placeholder">Confirmation du mot de passe</label>
                        <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control",:required => true %>
                    </div>
                      <div class="actions">
                        <%= f.submit "Nouveau mot de passe",class:"btn btn-primary btn-block" %>
                      </div>
                  <% end %>
                </div><%#  body2a %>