<style>
    .custom-control-label{
    position:static;
    }
    .loginBtn.loginBtn--google {
    padding-left: 55px;
    padding-right: 25px;
    }

    .form-control.login {
        position:relative;  
        border-radius: 3px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        padding: 4px 6px;
        border: 1px solid #dbdbdb;
        box-sizing: border-box;
        background-color: #f8f9fa;
        font-size: 14px;
        letter-spacing: .3px;
        background-color: #fafafa;
        margin-bottom: 20px;
    }

.form-label.login {
  position: absolute;
  left: 0;
  top: 10px;
  z-index: 10;
  transition: transform 150ms ease-out, font-size 150ms ease-out;
    color: #9aa0ac;
    font-weight: 100;
    padding-left: 8px;
    cursor: auto;
}

.focused .form-label.login {
  transform: translateY(-60%);
  font-size: .75em;
}

.form-input {
  position: relative;
  padding: 10px 1px 1px 1px;
  width: 100%;
  outline: 0;
  border: 0;
  box-shadow: 0;
  background-color: #fafafa;
}
.form-input.filled {
  box-shadow: 0 2px 0 0 lightgreen;
}



.close2 {
    background-color: transparent;
    border: 0;
    -webkit-appearance: none;
    font-weight: 700;
    color: #000;
    text-shadow: 0 1px 0 #fff;
    opacity: .5;
} 
.close2:hover {
    cursor: pointer;
}
.modal-header {
    margin-left:auto;
    border-bottom: 0px;
    height: 10px;
}
.facebooklogin {
    background-color: rgb(73, 96, 155);
    width: 250px !important;
    font-size: 15px !important;
    color: rgb(255, 255, 255) !important;
    cursor: pointer !important;
    font-weight: 400 !important;
    border-width: initial !important;
    border-style: none !important;
    border-color: initial !important;
    border-image: initial !important;
    border-radius: 3px !important;
    padding-bottom: 7px;
}

.googlelogin {
    background-color: rgb(63, 130, 248) !important;
    width: 250px !important;
    font-size: 15px !important;
    color: rgb(255, 255, 255) !important;
    cursor: pointer !important;
    font-weight: 400 !important;
    border-width: initial !important;
    border-style: none !important;
    border-color: initial !important;
    border-image: initial !important;
    border-radius: 3px !important;
    padding-bottom: 7px;
}
.facebooklogin,.facebooklogin a, .googlelogin, .googlelogin a{
    color:white;
    text-decoration:none;
}
.fa-2x {
    font-size: 1.3em;
    padding-right: 10px;
    padding-top: 5px;
}

.fa-facebook:before, .fa-google:before {
    position: relative;
    top: 2.3px;
    right: 10px;
}
button.googlelogin{
    margin-top: 10px;
}
button.googlelogin.session {
    margin-right: 4px!important;
}
.fa-google:before {
    right: 18px!important;
}
.modal-body .header-brand2,.modal-body .header-brand3 {
      font-size:1.8rem!important;
    }

.modal-dialog.modal-dialog-centered.login {
  width:400px!important;
}

.signupbutton {
    background: rgb(255, 255, 255);
    box-shadow: none!important;
    border: none;
    color: #467fcf;
    cursor: pointer;
    padding: 0!important;
}
.signupbutton:hover {
    text-decoration:underline;
}

.form-footer {
    margin-top: 1rem;
}
</style>
<div class="modal fade" id="passwordsModal">
      <div class="modal-dialog modal-dialog-centered login">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close2" data-dismiss="modal"><i class="fas fa-times"></i></button>
            </div>
              <div class="modal-body"> 
                    <div class="card-title">Réinitialisation du mot de passe</div>
                    <%= form_for(resource, as: resource_name,remote: true,url: password_path(resource_name), html: { :id => "new_user_9",method: :post }) do |f| %>
                      <%= devise_error_messages! %>
                        <div class="form-group">
                        <label class="form-control-placeholder">Adresse email</label>
                             <%= f.email_field :email, autocomplete: "email",class:"form-control",id:"email_password", :required => true %>
                        </div>
                        <div class="form-footer">
                         <div class="actions">
                        <%= f.submit "Réinitialisation du mot de passe",class:"btn btn-primary btn-block" %>
                        </div>
                        </div>
                    <% end %>
                    
                <br>
                <div class="text-center text-muted">   

                        <button class="signupbutton" 
                        data-toggle="modal" 
                        data-target="#signUpModal" 
                        data-dismiss="modal">S'inscrire
                        </button><br>
                        <button class="signupbutton" 
                        data-toggle="modal" 
                        data-target="#logInModal" 
                        data-dismiss="modal">Connexion
                        </button>

                </div>

              </div>
            
        </div>
    </div>
</div>