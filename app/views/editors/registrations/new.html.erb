<h2>Sign up Editors</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
                    <div class="form-control login">
                        <label class="form-label login">Prénom</label>
                        <%= f.text_field :name, autocomplete: "prénom", class:"form-input" %>
                    </div>
                    <div class="form-control login">
                        <label class="form-label login">Nom</label>
                        <%= f.text_field :fullname, autocomplete: "nom", class:"form-input" %>
                    </div>
                    <div class="form-control login">
                        <label class="form-label login">website</label>
                        <%= f.text_field :website, autocomplete: "website", class:"form-input" %>
                    </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "editors/shared/links" %>